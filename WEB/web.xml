	</servlet>
	<servlet-mapping>
		<servlet-name>QuestionnaireMarketingServlet</servlet-name>
		<url-pattern>/QuestionnaireMarketingServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>QuestionnaireMarketing</servlet-name>
		<jsp-file>/QuestionnaireMarketing.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>QuestionnaireMarketing</servlet-name>
		<url-pattern>/QuestionnaireMarketing</url-pattern>
	</servlet-mapping>

</web-app>